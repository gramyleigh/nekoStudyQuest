{% block extra_css %}
<style>
    /* Dashboard info */
    .dashboard-info {
        display: flex;
        align-items: center;
        background-color: rgba(146, 193, 255, 0.1);
        border-radius: 16px;
        padding: 20px;
        margin: 30px 0;
        box-shadow: 0 4px 10px rgba(146, 193, 255, 0.1);
        border: 1px solid rgba(146, 193, 255, 0.2);
    }

    .dashboard-icon {
        width: 48px;
        height: 48px;
        background-color: var(--secondary);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 20px;
        box-shadow: 0 4px 6px rgba(126, 182, 255, 0.2);
        color: white;
    }

    .dashboard-text {
        flex: 1;
        font-size: 1rem;
        color: var(--dark);
        line-height: 1.6;
    }

    /* Dashboard Widget Layout */
    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: auto auto auto;
        gap: 20px;
        margin-top: 30px;
    }

    .widget {
        background-color: var(--widget-bg);
        border-radius: 16px;
        padding: 20px;
        border: none;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        position: relative;
        backdrop-filter: blur(5px);
        transition: all 0.3s ease;
        overflow: hidden;
    }

    .widget:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.08);
    }

    .widget-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
        padding-bottom: 10px;
        border-bottom: 1px solid rgba(169, 149, 239, 0.2);
    }

    .widget-title {
        font-family: 'Architects Daughter', cursive;
        color: var(--primary-dark);
        font-size: 1.5rem;
        margin: 0;
        position: relative;
        display: flex;
        align-items: center;
    }

    .widget-title::before {
        margin-right: 10px;
        font-size: 1.4rem;
    }

    .widget-title.daily::before {
        content: "üìÖ";
    }

    .widget-title.subjects::before {
        content: "üìö";
    }

    .widget-title.test-comparison::before {
        content: "üìù";
    }

    .widget-title.score-trends::before {
        content: "üèÜ";
    }

    .widget-title.streak::before {
        content: "üî•";
    }

    /* Subject Widget */
    .subjects-widget {
        grid-column: 1;
        grid-row: 1;
    }

    .subject-list {
        max-height: 350px;
        overflow-y: auto;
        padding-right: 5px;
    }

    .subject-card {
        display: flex;
        align-items: center;
        background-color: var(--light);
        border-radius: 12px;
        padding: 15px;
        margin-bottom: 12px;
        position: relative;
        transition: all 0.3s ease;
        text-decoration: none;
        color: var(--dark);
        box-shadow: 0 2px 5px rgba(0,0,0,0.03);
        border-left: 3px solid var(--secondary-light);
    }

    .subject-card:hover {
        transform: translateX(3px);
        background-color: rgba(224, 216, 255, 0.2);
        box-shadow: 0 4px 8px rgba(0,0,0,0.06);
        border-left: 3px solid var(--primary);
    }

    .subject-icon {
        font-size: 2rem;
        margin-right: 15px;
        color: var(--primary);
    }

    .subject-info {
        flex: 1;
    }

    .subject-name {
        font-family: 'Architects Daughter', cursive;
        font-weight: bold;
        font-size: 1.2rem;
        margin-bottom: 2px;
        color: var(--secondary-dark);
    }

    .subject-tests {
        font-size: 0.9rem;
        color: var(--dark);
    }

    .edit-btn {
        background-color: rgba(255, 255, 255, 0.8);
        color: var(--dark);
        border: none;
        border-radius: 50%;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .edit-btn:hover {
        background-color: var(--primary-light);
        transform: rotate(10deg);
    }

    .add-subject-btn {
        display: block;
        width: 97%;
        padding: 12px;
        background-color: var(--secondary);
        border: none;
        border-radius: 10px;
        text-align: center;
        font-family: 'Comic Neue', cursive;
        font-weight: bold;
        font-size: 1rem;
        margin-top: 15px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        color: white;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .add-subject-btn:hover {
        background-color: var(--secondary-dark);
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.15);
    }

    /* Empty State Styles */
    .empty-state {
        text-align: center;
        padding: 20px;
        background-color: rgba(255, 255, 255, 0.6);
        border-radius: 12px;
        border: 1px dashed var(--primary-light);
        margin: 10px 0;
    }

    .empty-state p {
        font-family: 'Crafty Girls', cursive;
        font-size: 1.1rem;
        margin-bottom: 15px;
    }

    .empty-state-icon {
        font-size: 2.5rem;
        margin-bottom: 10px;
        display: block;
    }

    /* Current Tests Widget */
    .current-tests-widget {
        grid-column: 1;
        grid-row: 2;
    }

    .current-test-item {
        background-color: var(--light);
        border-radius: 12px;
        padding: 15px;
        margin-bottom: 12px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.03);
        transition: all 0.3s ease;
    }

    .current-test-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.06);
    }

    .current-test-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 8px;
    }

    .current-test-title {
        font-weight: bold;
        font-size: 1.2rem;
        color: var(--secondary-dark);
    }

    .current-test-date {
        font-size: 0.9rem;
        color: var(--primary-dark);
        background-color: var(--primary-light);
        padding: 3px 8px;
        border-radius: 10px;
    }

    .current-test-subject {
        font-size: 0.9rem;
        margin-bottom: 8px;
        color: var(--dark);
    }

    .current-test-progress {
        height: 12px;
        background-color: #f0f0f0;
        border-radius: 6px;
        overflow: hidden;
        margin-top: 5px;
    }

    .current-test-progress-bar {
        height: 100%;
        background-color: var(--success);
    }

    .current-test-actions {
        display: flex;
        justify-content: flex-end;
        margin-top: 10px;
    }

    .current-test-action-btn {
        display: inline-block;
        padding: 5px 10px;
        background-color: var(--secondary);
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-size: 0.85rem;
        font-weight: bold;
        transition: all 0.2s ease;
    }

    .current-test-action-btn:hover {
        background-color: var(--secondary-dark);
        transform: translateY(-1px);
    }

    /* Stats Widget */
    .stats-widget {
        grid-column: 2;
        grid-row: 2;
    }

    .stats-tabs {
        display: flex;
        margin-bottom: 15px;
        border-bottom: 1px solid rgba(126, 182, 255, 0.3);
    }

    .stats-tab {
        padding: 8px 15px;
        font-family: 'Comic Neue', cursive;
        font-weight: bold;
        font-size: 1rem;
        color: var(--dark);
        cursor: pointer;
        border-radius: 8px 8px 0 0;
        transition: all 0.2s ease;
        margin-right: 5px;
    }

    .stats-tab.active {
        background-color: var(--secondary);
        color: var(--light);
    }

    .stats-tab:hover:not(.active) {
        background-color: var(--primary-light);
    }

    .stats-content {
        height: 280px;
        position: relative;
    }

    .stats-chart-container {
        width: 100%;
        height: 100%;
        display: none;
    }

    .stats-chart-container.active {
        display: block;
    }

    .stats-footer {
        margin-top: 10px;
        text-align: right;
    }

    .stats-detail-link {
        color: var(--secondary-dark);
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: bold;
        transition: all 0.2s ease;
    }

    .stats-detail-link:hover {
        color: var(--secondary-dark);
        text-decoration: underline;
    }

    /* Past Tests Widget */
    .past-tests-widget {
        grid-column: 1 / span 2;
        grid-row: 3;
    }

    .past-test-item {
        background-color: var(--light);
        border-radius: 12px;
        padding: 15px;
        margin-bottom: 12px;
        position: relative;
        transition: all 0.2s ease;
        box-shadow: 0 2px 5px rgba(0,0,0,0.03);
    }

    .past-test-item:hover {
        transform: translateX(3px);
        background-color: var(--light);
        box-shadow: 0 4px 8px rgba(0,0,0,0.06);
    }

    .past-test-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 5px;
    }

    .past-test-title {
        font-family: 'Architects Daughter', cursive;
        font-weight: bold;
        font-size: 1.1rem;
        color: var(--secondary-dark);
    }

    .past-test-date {
        font-size: 0.9rem;
        background-color: var(--primary-light);
        padding: 3px 8px;
        border-radius: 10px;
        color: var(--primary-dark);
    }

    .past-test-subject {
        font-style: italic;
        margin-bottom: 8px;
        font-size: 0.9rem;
        color: var(--dark);
    }

    .past-test-progress {
        height: 12px;
        background-color: #f0f0f0;
        border-radius: 6px;
        overflow: hidden;
        margin-top: 5px;
    }

    .past-test-progress-bar {
        height: 100%;
        background-color: var(--success);
    }

    .view-all-btn {
        display: block;
        text-align: center;
        padding: 12px;
        background-color: var(--secondary);
        color: white;
        border-radius: 10px;
        font-family: 'Comic Neue', cursive;
        font-weight: bold;
        font-size: 1rem;
        margin-top: 15px;
        text-decoration: none;
        transition: all 0.2s ease;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .view-all-btn:hover {
        background-color: var(--secondary-dark);
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.15);
    }

    /* Study Stats Widget */
    .study-stats-widget-small {
        grid-row: 1;
        grid-column: 2;
        display: flex;
        flex-direction: column;
    }

    .study-stats-widget-small .widget-header {
        margin-bottom: 10px;
        padding-bottom: 8px;
    }

    .study-stats-container {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(2, 1fr);
        grid-gap: 15px;
        margin: 0;
        flex-grow: 1;
        height: calc(100% - 50px); /* Account for header */
    }

    .stat-item {
        background-color: rgba(255, 255, 255, 0.7);
        border-radius: 15px;
        padding: 15px 10px;
        text-align: center;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
        border: 1px solid rgba(169, 149, 239, 0.2);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 85%;
        width: 92%;
    }

    .stat-item:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }

    .stat-icon {
        font-size: 1.8rem;
        margin-bottom: 5px;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: bold;
        color: var(--secondary-dark);
        margin: 5px 0;
    }

    .stat-label {
        font-size: 0.9rem;
        color: var(--dark);
        text-align: center;
    }

    /* Floating cat emojis */
    .cat-float-container {
        position: fixed;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        pointer-events: none;
        z-index: -1;
    }

    .floating-cat {
        position: absolute;
        font-size: 3rem;
        animation: float-around 25s linear infinite;
        opacity: 0.6;
    }

    @keyframes float-around {
        0% { transform: translateY(0) rotate(0); }
        25% { transform: translateY(-20px) rotate(10deg); }
        50% { transform: translateY(0) rotate(0); }
        75% { transform: translateY(20px) rotate(-10deg); }
        100% { transform: translateY(0) rotate(0); }
    }

    /* Paw print decorations */
    .paw-print {
        position: absolute;
        font-size: 1.5rem;
        opacity: 0.3;
        transform: rotate(var(--rotate));
        z-index: -1;
    }

    /* Responsive design */
    @media (max-width: 992px) {
        .dashboard-grid {
            grid-template-columns: 1fr;
        }

        .subjects-widget, .study-stats-widget-small, .current-tests-widget, .stats-widget, .past-tests-widget {
            grid-column: 1;
        }

        .subjects-widget { grid-row: 1; }
        .study-stats-widget-small { grid-row: 2; }
        .current-tests-widget { grid-row: 3; }
        .stats-widget { grid-row: 4; }
        .past-tests-widget { grid-row: 5; }
    }

    @media (max-width: 768px) {
        .dashboard-info {
            flex-direction: column;
            text-align: center;
        }

        .dashboard-icon {
            margin-right: 0;
            margin-bottom: 15px;
        }

        .study-stats-container {
            grid-template-columns: 1fr;
        }
    }
</style>
{% endblock %}

{% block extra_scripts %}
<script>
    // Initialize charts when DOM is ready
    document.addEventListener('DOMContentLoaded', function() {
        // Add tab switching functionality
        const statsTabs = document.querySelectorAll('.stats-tab');
        const statsCharts = document.querySelectorAll('.stats-chart-container');

        statsTabs.forEach(tab => {
            tab.addEventListener('click', function() {
                // Remove active class from all tabs and charts
                statsTabs.forEach(t => t.classList.remove('active'));
                statsCharts.forEach(c => c.classList.remove('active'));

                // Add active class to clicked tab and corresponding chart
                const tabName = this.dataset.tab;
                this.classList.add('active');
                document.getElementById(`${tabName}-chart`).classList.add('active');
            });
        });

        // Set up Chart.js
        Chart.defaults.font.family = "'Comic Neue', cursive";
        Chart.defaults.font.size = 14;
        Chart.defaults.color = "#545b78";

        // Initialize charts only if data is available
        {% if daily_progress is defined and daily_progress and daily_progress|length > 0 %}
            // Daily Progress Chart
            const dailyCtx = document.getElementById('dailyProgressChart').getContext('2d');
            if (dailyCtx) {
                const dailyProgressChart = new Chart(dailyCtx, {
                    type: 'line',
                    data: {
                        labels: [{% for date, count in daily_progress %}'{{ date }}'{% if not loop.last %}, {% endif %}{% endfor %}],
                        datasets: [{
                            label: 'Resources Completed',
                            data: [{% for date, count in daily_progress %}{{ count }}{% if not loop.last %}, {% endif %}{% endfor %}],
                            backgroundColor: 'rgba(146, 193, 255, 0.2)',
                            borderColor: 'rgba(146, 193, 255, 1)',
                            borderWidth: 2,
                            tension: 0.3,
                            pointBackgroundColor: 'rgba(146, 193, 255, 1)',
                            pointBorderColor: '#fff',
                            pointRadius: 5
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    stepSize: 1
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            }
                        }
                    }
                });
            }
        {% endif %}

        {% if subject_counts is defined and subject_counts and subject_counts.values()|sum > 0 %}
            // Subject Progress Chart
            const subjectCtx = document.getElementById('subjectProgressChart').getContext('2d');
            if (subjectCtx) {
                const subjectChart = new Chart(subjectCtx, {
                    type: 'doughnut',
                    data: {
                        labels: [{% for subject, count in subject_counts.items() %}'{{ subject }}'{% if not loop.last %}, {% endif %}{% endfor %}],
                        datasets: [{
                            data: [{% for subject, count in subject_counts.items() %}{{ count }}{% if not loop.last %}, {% endif %}{% endfor %}],
                            backgroundColor: [
                                'rgba(184, 164, 244, 0.7)',
                                'rgba(146, 193, 255, 0.7)',
                                'rgba(168, 225, 209, 0.7)',
                                'rgba(255, 212, 229, 0.7)',
                                'rgba(255, 179, 192, 0.7)',
                                'rgba(255, 224, 196, 0.7)'
                            ],
                            borderColor: [
                                'rgba(184, 164, 244, 1)',
                                'rgba(146, 193, 255, 1)',
                                'rgba(168, 225, 209, 1)',
                                'rgba(255, 212, 229, 1)',
                                'rgba(255, 179, 192, 1)',
                                'rgba(255, 224, 196, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'right',
                                labels: {
                                    font: {
                                        family: "'Comic Neue', cursive",
                                        size: 12
                                    }
                                }
                            }
                        }
                    }
                });
            }
        {% endif %}
    });
</script>
{% endblock %}